/* pages/find/find.wxss */

.find-container {
  height: 100%;
}

.find-box{
height: 30%;
}

.head-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 10%;
  /* 用于设置或检索弹性盒子元素在主轴（横轴）方向上的对齐方式。 *//* justify-content: center; */
}

.head {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx;
  border-radius: 50%;
  float: left;
}

.username {
  font-size: 25rpx;
  color: #aaa;
}

.scroll-view {
  width: 95%;
}

.scroll-container {
  /*纵向滑块*/
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.scroll-box {
  /*纵向滑块*/
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
   width: 100%;
}

.scroll-image {
 width: 100%;
}

.scroll-foot{
 /*纵向滑块*/
  display: flex;
  flex-direction: row;
  align-items: center;
  float:right;
  /* width: 95%; */
}

.media {
  width: 100%;
  height: 200px;
}

.like {
  width: 40rpx;
  height: 40rpx;
}

.evaluate {
  width: 60rpx;
  height: 60rpx;
}
.share {
  width: 32rpx;
  height: 32rpx;
}
